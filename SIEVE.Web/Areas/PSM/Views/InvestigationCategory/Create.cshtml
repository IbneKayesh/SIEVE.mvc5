@model SIEVE.Infrastructure.Models.PSM.PSM_INVES_CATEGORY
    @{
        ViewBag.Title = "Create Category";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Create a new Category</h3>
            <div class="card-tools">
                <a href="@Url.Action("Index","InvestigationCategory", new { Area ="PSM"})" class="btn btn-outline-info btn-flat btn-sm"><i class="fas fa-chevron-circle-left"></i> Back</a>
                <a href="@Url.Action("Create","InvestigationCategory", new { Area ="PSM", id=""})" class="btn btn-outline-primary btn-flat btn-sm"><i class="fas fa-plus-circle"></i> New</a>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.ID)
                <div class="row">
                    <div class="col-md-2 col-sm-12">
                        @Html.LabelFor(model => model.CATEGORY_NAME, htmlAttributes: new { @class = "control-label" })<i class="text-danger">*</i>
                        @Html.EditorFor(model => model.CATEGORY_NAME, new { htmlAttributes = new { @class = "form-control form-control-sm", @Placeholder = Html.DisplayNameFor(x => x.CATEGORY_NAME) } })
                        @Html.ValidationMessageFor(model => model.CATEGORY_NAME, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group float-right mt-2">
                            <button type="submit" class="btn btn-success btn-flat btn-sm"><i class="fas fa-save"></i> Save</button>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- /.card-body -->
    </div>
